<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:id="@+id/rel">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Steps"
        android:id="@+id/acc_c"
        android:layout_alignTop="@+id/StepC"
        android:layout_alignLeft="@+id/mag_c"
        android:layout_alignStart="@+id/mag_c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="mic(dB)"
        android:id="@+id/gyro_c"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/mag_c"
        android:layout_alignStart="@+id/mag_c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="RSSI(in dBm)"
        android:id="@+id/mag_c"
        android:layout_alignTop="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Distance (in ft.)"
        android:id="@+id/textView5"
        android:layout_marginTop="109dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Max Amp"
        android:id="@+id/textView6"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="RSSI"
        android:id="@+id/textView7"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Developer Note"
        android:id="@+id/writerstat"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Steps"
        android:id="@+id/StepC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ESSID:"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/mag_c"
        android:layout_toLeftOf="@+id/writerstat"
        android:layout_toStartOf="@+id/writerstat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/distance_t"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/acc_c"
        android:layout_alignStart="@+id/acc_c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Total rotation"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="in deg"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/gyro_c"
        android:layout_alignStart="@+id/gyro_c"
        android:id="@+id/bearing" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start!"
        android:id="@+id/cont"
        android:layout_marginBottom="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/mag_c"
        android:layout_alignEnd="@+id/mag_c"
        android:onClick="ButtClick" />

</RelativeLayout>
